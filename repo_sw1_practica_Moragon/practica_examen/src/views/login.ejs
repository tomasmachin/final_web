    <div id="register" class="main_login">
        <label for="register_form" form="register_form">REGISTER</label> 
        <form id="register_form" action="/login/check_register" method="post">
            <div class="inputDiv">
                <label for="email_register">Email</label>
                <input id="email_register" type="email" placeholder="email" name="email_register">
            </div>
            <div class="inputDiv">
                <label for="username_register">Username</label>
                <input id="username_register" type="text" placeholder="username" name="username_register" required>
            </div>
            <div class="inputDiv">
                <label for="password_register">Password</label>
