        </form>
    </div>
    
    <div id="login" class="main_login">
        <label for="login_form" form="login_form">LOGIN</label> 
        <form id="login_form" action="/login/check_login" method="post">
            <div class="inputDiv">
                <label for="username_email_login">Username or Email</label>
                <input id="username_email_login" type="text" placeholder="username or email" name="username_email_login" required>
            </div>
            <div class="inputDiv">
                <label for="password_login">Password</label>
                <input id="password_login" type="password" placeholder="password" name="password_login" required>
